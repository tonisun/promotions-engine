        Supplier index
            
    </h1>

    <table class="table">
        <thead>
            <tr>
                <th>
                    Id
                                    
                </th>
                <th>
                    Name
                                    
                </th>
                <th>
                    Address
                                    
                </th>
                <th>
                    Phon
                                    
                </th>
                <th>
                    Site
                                    
                </th>
                <th>
                    Description
                                    
                </th>
                <th>
                    actions
                                    
                </th>
            </tr>
        </thead>
        <tbody>
            {% for supplier in suppliers %}
                <tr>
                    <td>
                        {{ supplier.id }}
                    </td>
                    <td>
                        {{ supplier.name }}
                    </td>
                    <td>
                        {{ supplier.address }}
                    </td>
                    <td>
                        {{ supplier.phon }}
                    </td>
                    <td>
                        {{ supplier.site }}
                    </td>
                    <td>
                        {{ supplier.description }}
                    </td>
                    <td>
                        <a href="{{ path('supplier.show', {'id': supplier.id}) }}">
                            show
                                                    
                        </a>
                        <a href="{{ path('supplier.edit', {'id': supplier.id}) }}">
                            edit
                                                    
                        </a>
